!!!
%html
  %head
    %link{:rel => 'stylesheet', :href => '/stylesheets/style.css', :type => 'text/css'}
  %body
    %a{:href => 'https://github.com/joeyschoblaska/inseason'}
      %img{:style => 'position: absolute; top: 0; right: 0; border: 0;', :src => "https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png", :alt => "Fork me on GitHub"}
    .container
      %h2 What's in Season In Illinois
    %table
      %tbody
        - unless @year_round.empty?
          %tr.in-season
            %td.name YEAR-ROUND:
            %td.bar= @year_round.map{|yr| yr.name}.join(', ')
        - (@crops - @year_round).each do |crop|
          %tr{:class => crop.in_season? ? 'in-season' : 'out-of-season'}
            %td.name= crop.name
            %td.bar{:style => 'position: relative'}
              = current_line
              .season-bar
                %img{:src => 'images/month-bars.png', :class => 'month-bars'}
                = season_bars(crop.seasons)
